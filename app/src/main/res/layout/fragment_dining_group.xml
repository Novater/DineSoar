<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/start_group"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="240dp"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="4dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/dining_group_image"
                            android:layout_width="match_parent"
                            android:layout_marginTop="-4dp"
                            android:layout_height="150dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/create_dining_background"/>
                        <TextView
                            android:id="@+id/create_dining_group_text"
                            android:textColor="@color/offWhite"
                            android:layout_marginTop="110dp"
                            android:layout_marginLeft="13dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Start Your Dining Group"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/description_dining_group"
                            android:textSize="14dp"
                            android:lineSpacingMultiplier="1.3"
                            android:textColor="@color/black"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/dining_group_image"
                            android:text="Eating out with your friends is fast and easy. Start a group with your friends now!"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/start_now_button"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:text="START NEW"
                            android:textColor="@color/text_color_2"
                            android:layout_marginLeft="12dp"
                            android:layout_below="@+id/description_dining_group"
                            android:layout_marginTop="20dp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/create_dining_group_overflow_menu"
                            android:background="@drawable/ic_action_overflow"
                            android:layout_below="@+id/description_dining_group"
                            android:layout_marginBottom="8dp"
                            android:layout_alignRight="@+id/create_dining_group_text"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:id="@+id/local_restaurant_list"
                    android:layout_below="@+id/start_group"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="200dp"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="4dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/more_dining_pic"
                            android:layout_height="115dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/more_dining_background"/>
                        <TextView
                            android:id="@+id/suggested_restaurants"
                            android:textColor="@color/offWhite"
                            android:layout_marginTop="80dp"
                            android:layout_marginLeft="13dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Local Restaurants"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/description_nearby_restaurants"
                            android:textSize="14dp"
                            android:lineSpacingMultiplier="1.3"
                            android:textColor="@color/black"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/more_dining_pic"
                            android:layout_marginRight="10dp"
                            android:text="Searching for restaurants near you? Look at some of our suggestions."
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/find_local_restaurants"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:text="NEARBY RESTAURANTS"
                            android:textColor="@color/text_color_2"
                            android:layout_marginLeft="12dp"
                            android:layout_below="@+id/description_nearby_restaurants"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/dining_group_1"
                    android:layout_gravity="left"
                    android:layout_below="@+id/local_restaurant_list"
                    android:layout_width="172dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2.5dp"
                    android:layout_height="170dp"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="4dp">
                    <ImageView
                        android:id="@+id/dining_group_1_image"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/group_1_background"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/dining_group_2"
                    android:layout_below="@+id/local_restaurant_list"
                    android:layout_gravity="right"
                    android:layout_toRightOf="@+id/dining_group_1"
                    android:layout_width="172dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2.5dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="170dp"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="4dp">
                    <ImageView
                        android:id="@+id/dining_group_2_image"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/group_2_background"/>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </ScrollView>
</RelativeLayout>