<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    android:label="Dinesoar"
    tools:context=".ProfileHomePageActivity">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />
    <ImageButton
        android:id="@+id/restaurant_button"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_below="@+id/app_bar"
        android:background="@drawable/restaurant_press"
        android:elevation="4dp"
        android:clickable="true"
        android:onClick="findRestaurant" />
    <ImageButton
        android:id="@+id/make_group"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_below="@+id/restaurant_button"
        android:background="@drawable/restaurant_press"
        android:elevation="4dp"
        android:clickable="true"
        android:onClick="findRestaurant" />
    <ImageButton
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_below="@+id/make_group"
        android:background="@drawable/restaurant_press"
        android:elevation="4dp"
        android:clickable="true"
        android:onClick="findRestaurant" />
    <android.support.v7.widget.Toolbar  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/actionbarBottom"
        android:layout_width="match_parent"
        android:background="@color/colorLightBrown"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        app:theme="@style/Base.Theme.AppCompat.CompactMenu" >

    <LinearLayout
        android:id="@+id/bottomtoolbarmenucontainer"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_marginRight="16.5dp"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightBrown"
            android:clickable="true"
            android:layout_weight = "1"
            android:src="@drawable/ic_action_select_all"
            android:onClick="onLogOut" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightBrown"
            android:clickable="true"
            android:layout_weight = "1"
            android:src="@drawable/ic_action_select_all" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightBrown"
            android:clickable="true"
            android:layout_weight = "1"
            android:src="@drawable/ic_action_select_all" />
    </LinearLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>

