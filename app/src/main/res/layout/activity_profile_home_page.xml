<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    android:label="Dinesoar"
    tools:context=".ProfileHomePageActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="16.5dp"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/stub_logo"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/findRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar_home"
        android:layout_centerHorizontal="true"
        android:textColor="#A0FFFFFF"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorSkyBlue"
        android:text="Find Restaurant"
        android:onClick="findRestaurant"/>
    <Button
        android:id="@+id/LogOut"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findRestaurant"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:textColor="#A0FFFFFF"
        android:text="Logout"
        android:background="@color/colorSkyBlue"
        android:onClick="onLogOut"
        ></Button>

    <android.support.v7.widget.Toolbar  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/actionbarBottom"
        android:layout_width="match_parent"
        android:background="@color/iron"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        app:theme="@style/Base.Theme.AppCompat.CompactMenu" >

    <LinearLayout
        android:id="@+id/bottomtoolbarmenucontainer"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_marginRight="16.5dp"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/iron"
            android:clickable="true"
            android:layout_weight = "1"
            android:src="@drawable/temp_icon" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/iron"
            android:clickable="true"
            android:layout_weight = "1"
            android:src="@drawable/temp_icon" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/iron"
            android:clickable="true"
            android:layout_weight = "1"
            android:src="@drawable/temp_icon" />
    </LinearLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>

